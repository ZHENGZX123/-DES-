<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/read_book_bg"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:id="@+id/title_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_weight="0.01"
	        android:gravity="center_horizontal" >
	    </LinearLayout>
	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" 
	        android:orientation="horizontal" >
	        
	        <RelativeLayout 
	            android:layout_width="wrap_content"
	        	android:layout_height="match_parent"
	        	android:orientation="vertical" >
	            
	            <ImageView
	                android:id="@+id/book_return_iv"
	                android:layout_width="120dip"
	                android:layout_height="120dip"
	                android:layout_marginLeft="10dip"
	                android:layout_alignParentBottom="true"
	                android:src="@drawable/return_icon"/>
	            
	        </RelativeLayout>
	        
		    <ScrollView
		      android:id="@+id/scrollview_story"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="50dip"
	            android:layout_marginLeft="55dip"
	            android:layout_marginRight="40dip"
	            android:layout_marginBottom="50dip"
		        >
		
		        <LinearLayout
		            android:id="@+id/file_content"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical" >
		        </LinearLayout>
		    </ScrollView>
	    
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="140dip"
	    android:layout_height="450dip"
	    android:orientation="vertical"
	    android:paddingLeft="1dip"
	    android:gravity="center_vertical"
	    android:layout_gravity="center_vertical"
	    android:background="@drawable/read_text_control_bg">
	    
	    <ImageView 
	        android:id="@+id/voice_play_pause"
	        android:layout_width="100dip"
	        android:layout_height="65dip"
	        android:layout_gravity="left"
	        android:src="@drawable/voice_pause2"/>
	    
	    <ImageView 
	        android:id="@+id/volume_up"
	       	android:layout_width="100dip"
	        android:layout_height="65dip"
	        android:layout_gravity="left"
	        android:src="@drawable/volume_up2"/>
	    
	    <ImageView 
	        android:id="@+id/volume_down"
	        android:layout_width="100dip"
	        android:layout_height="65dip"
	        android:layout_gravity="left"
	        android:src="@drawable/volume_down2"/>
	    
	    <ImageView 
	        android:id="@+id/voice_type_child"
	       	android:layout_width="100dip"
	        android:layout_height="65dip"
	        android:layout_gravity="left"
	        android:src="@drawable/voice_type_child3"/>
	    
	    <ImageView 
	        android:id="@+id/voice_type_man"
	        android:layout_width="100dip"
	        android:layout_height="65dip"
	        android:layout_gravity="left"
	        android:src="@drawable/voice_type_man3"/>
	    
	    <ImageView 
	        android:id="@+id/voice_type_women"
	        android:layout_width="100dip"
	        android:layout_height="65dip"
	        android:layout_gravity="left"
	        android:src="@drawable/voice_type_women3"/>
	    
	</LinearLayout>
</FrameLayout>